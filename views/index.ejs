<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="index.css" />
  </head>
  <body>
    <h2>All Chats</h2>

    <br />
    <form action="/chats/new" method="get">
      <button class="create btn">CREATE</button>
    </form>

    <br />

    <br />
    <br />
    <% for(let chat of chats){%>
    <div class="chat">
      <p>From :<i><%= chat.from%></i></p>
      <div class="msg">
        <p><%= chat.message%></p>
      </div>

      <p>To:<i><%= chat.to%></i></p>
      <div class="time">
        <p><%=chat.created_at.toString().split(" ")[4] %></p>
        <p><%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %></p>
      </div>
      <form action="/chats/<%=chat._id %>/edit" method="get">
        <button class="create update">UPDATE</button>
      </form>
      <form action="/chats/?_method=DELETE" method="post">
        <input type="hidden" name="_id" value="<%= chat._id %>" />
        <button class="create update delete">DELETE</button>
      </form>
    </div>

    <hr />
    <% } %>
  </body>
</html>
